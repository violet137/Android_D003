<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_style">
        <item name="android:background">#ff33b5e5</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_height">@dimen/height_Button</item>
        <item name="android:layout_width">@dimen/width_Button</item>
    </style>

    <style name="editText_style">
        <item name="android:layout_height">@dimen/height_editText</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/padding_left_editText</item>
    </style>
</resources>
