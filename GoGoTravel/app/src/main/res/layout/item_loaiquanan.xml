<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:clickable="true"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivLoaiquanan" android:focusable="false"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/common_ic_googleplayservices" />

    <TextView android:focusable="false"
        android:id="@+id/tvTenloai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView android:focusable="false"
        android:id="@+id/tvSoluong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
</LinearLayout>
