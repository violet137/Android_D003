<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frKhuVuc">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/ivLinkAnh_KhuVuc"
            android:layout_height="300dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="15dp">

            <ImageView
                app:srcCompat="@drawable/khu_vuc_danh_gia1"
                android:id="@+id/imageView2"
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:text="  " />

            <TextView
                android:text="DanhGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/tvDanhGia_KhuVuc"
                android:layout_weight="1"
                android:textColor="@android:color/background_light" />

            <ImageView
                android:layout_width="20dp"
                app:srcCompat="@drawable/khu_vuc_so_luot_xem"
                android:id="@+id/imageView3"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_weight="1"
                tools:text="  " />

            <TextView
                android:text="SoLuotXem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSoLuotXem_KhuVuc"
                android:layout_weight="1"
                android:textColor="@android:color/background_light" />

            <ImageView
                app:srcCompat="@drawable/khu_vuc_yeu_thich"
                android:id="@+id/imageView4"
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_weight="1"
                tools:text="  " />

            <TextView
                android:text="YeuThich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvYeuThich_KhuVuc"
                android:layout_weight="1"
                android:textColor="@android:color/background_light" />

        </LinearLayout>

        <TextView
            android:text="TenKhuVuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTen_KhuVuc"
            android:gravity="center" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <TextView
        android:text="MoTa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvMoTa_KhuVuc" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />
</LinearLayout>
