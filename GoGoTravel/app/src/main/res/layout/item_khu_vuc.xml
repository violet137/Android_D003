<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frKhuVuc">

        <ImageView
            android:id="@+id/ivLinkAnh_KhuVuc"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                app:srcCompat="@drawable/khu_vuc_danh_gia1"
                android:id="@+id/imageView2"
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:text="  " />

            <TextView
                android:text="DanhGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/tvDanhGia_KhuVuc"
                android:layout_weight="1"
                android:textColor="@android:color/background_light" />

            <ImageView
                android:layout_width="20dp"
                app:srcCompat="@drawable/khu_vuc_so_luot_xem"
                android:id="@+id/imageView3"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_weight="1"
                tools:text="  " />

            <TextView
                android:text="SoLuotXem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSoLuotXem_KhuVuc"
                android:layout_weight="1"
                android:textColor="@android:color/background_light" />

            <ImageView
                app:srcCompat="@drawable/khu_vuc_yeu_thich"
                android:id="@+id/imageView4"
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_weight="1"
                tools:text="  " />

            <TextView
                android:text="YeuThich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvYeuThich_KhuVuc"
                android:layout_weight="1"
                android:textColor="@android:color/background_light" />

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/tvTen_KhuVuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TenKhuVuc"
        android:textAllCaps="?android:attr/textAllCaps"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp"
        android:textStyle="italic"
        android:typeface="monospace" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/textView2"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/tvMoTa_KhuVuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="MoTa"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light" />
</LinearLayout>
