<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <TextView
        android:id="@+id/tvTenDiaDiemAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/dialog_add_title"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etNoiDungCheckin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_add_checkin_height"
        android:layout_below="@+id/tvTenDiaDiemAdd"
        android:layout_marginTop="@dimen/dialog_add_checkin_margin_top"
        android:gravity="start|top"
        android:hint="Nội dung Check In" />

    <GridView
        android:id="@+id/gvCheckIn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dialog_add_checkin_height"
        android:numColumns="3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnDialogAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thêm"
            style="@style/button_style"/>

        <Button
            android:id="@+id/btnCapture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chụp Ảnh"
            style="@style/button_style"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/btnChonAnh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chọn Ảnh"
            style="@style/button_style"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

</LinearLayout>

</ScrollView>
